<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_border_for_dialog"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/impact"
        android:text="@string/your_score"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_time_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/impact"
        android:paddingTop="8dp"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="@id/score_text"
        app:layout_constraintStart_toStartOf="@id/score_text"
        app:layout_constraintTop_toBottomOf="@id/score_text"
        tools:text="00:15" />

    <TextView
        android:id="@+id/text_enter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/impact"
        android:paddingTop="48dp"
        android:text="@string/enter_name"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/score_text"
        app:layout_constraintStart_toStartOf="@id/score_text"
        app:layout_constraintTop_toBottomOf="@id/text_time_result" />

    <EditText
        android:id="@+id/edit_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rectangle_border_for_name"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/score_text"
        app:layout_constraintStart_toStartOf="@id/score_text"
        app:layout_constraintTop_toBottomOf="@id/text_enter_name" />

    <ImageButton
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/menu_button_ripple"
        android:src="@drawable/save_button"
        app:layout_constraintEnd_toEndOf="@id/score_text"
        app:layout_constraintStart_toStartOf="@id/score_text"
        app:layout_constraintTop_toBottomOf="@id/edit_text_name" />

</androidx.constraintlayout.widget.ConstraintLayout>